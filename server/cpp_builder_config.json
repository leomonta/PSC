{
	"scripts" : {
	},
	"compiler": {
		"compiler_style": "gcc",
		"compiler_exe": "g++",
		"linker_exe": "g++"
	},
	
	"directories": {
		"project_dir": ".",
		"exe_path_name": "bin/PSCS",
		"include_dirs": [
			"include",
			"ext",
			"../common/include",
			"/usr/local/include"
		],
		"source_dirs": [
			"src",
			"../common/src"
		],
		"temp_dir": "obj"
	},

	"debug": {
		"compiler_args": "-g3 -std=c++2a -Wno-missing-field-initializers -Wno-unknown-pragmas -Wall -Wconversion -Wshadow -Wextra -fanalyzer -fsanitize=address -fsanitize=leak",
		"linker_args": "-fsanitize=address -fsanitize=leak",
		"libraries_dirs": [
			"/usr/local/lib"
		],
		"libraries_names": [
			"dl",
			"pthread",
			"netTcpSslDebug"
		]

	},

	"release": {
		"compiler_args": "-g3 -std=c++2a -Wno-missing-field-initializers -Wno-unknown-pragmas -Wall -Wconversion -Wshadow -Wextra",
		"linker_args": "",
		"libraries_dirs": [
			"/usr/local/lib"
		],
		"libraries_names": [
			"dl",
			"pthread",
			"netTcpSsl"
		]
	}
}
